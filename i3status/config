# i3status configuration file.
# see "man i3status" for documentation.

# It is important that this file is edited as UTF-8.
# The following line should contain a sharp s:
# ß
# If the above line is not correctly displayed, fix your editor first!

general {
        colors = true
        interval = 5
        color_good = "#2AA198"
        color_bad = "#586E75"
        color_degraded = "#DC322F"
}

# order += "ipv6"
# order += "load"
# order += "cpu_temperature 0"
order += "memory"
order += "cpu_usage"
order += "disk /"
order += "wireless _first_"
# order += "disk /home"
order += "ethernet _first_"

order += "volume master"
order += "battery all"
order += "tztime local"

read_file UPTIME {
        format =  " %title: %content "
}

cpu_usage {
        format = " cpu %usage "
        # format = "   %usage  "
}

# cpu_temperature {
#         format = " T: %degrees °C "
#         max_threshold = 42
#         path = "acpi -t"
# }

cpu_temperature 0 {
    path = "/sys/devices/platform/coretemp.0/temp1_input"
    format = "%degrees°C"
}

load {
        format = " %1min "
        # max_threshold = 1.5
}

disk "/" {
        # format = " hdd %avail "
        format = " %avail "
        # format = "  ⛁ %free  "
}


wireless _first_ {
        format_up= " %quality, %essid "
        # format_up = "W: (%quality at %essid) %ip"
        # format_down = "no wifi"
        # format_down = "W: down"
        # format_quality = "%03d%s"
        color_good = "#f9faf9"
        color_bad = "#f9faf9"
        color_degraded = "#f9faf9"
}

ethernet _first_ {
# if you use %speed, i3status requires root privileges
        format_up = " lan: %ip %speed "
        format_down = " no lan "
}

battery all {
        # format = "%status %percentage %remaining %emptytime"
        format = " %status %percentage "
        format_down = "no battery"
        last_full_capacity = true
        integer_battery_capacity = true
        status_chr = "chr"
        # status_chr = ""
        # status_chr = "⚡"
        status_bat = "bat"
        # status_bat = "☉"
        # status_bat = ""
        # status_unk = "?"
        status_unk = ""
        status_full = "full"
        # status_full = "☻"
        # status_full = ""
        low_threshold = 30
        threshold_type = time
}

memory {
        format = " mem %percentage_used "
        # format = "   %percentage_used  "
        # format = "  %used | %available"
        threshold_degraded = "1G"
        format_degraded = " mem < %available "
        # format_degraded = "   < %available  "
}

tztime local {
        # format = "%Y-%m-%d %H:%M:%S"
        format = " %a %d/%m  %H:%M "
}

volume master {
        # format = "   %volume "
        format = " vol %volume "
        format_muted = " vol muted (%volume) "
        # format_muted = "    muted (%volume)  "
        device = "default"
        mixer = "Master"
        mixer_idx = 0
}
